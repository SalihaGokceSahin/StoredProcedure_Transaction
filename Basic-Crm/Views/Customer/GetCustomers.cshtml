@model IEnumerable<Entities.Customer>
@{
    ViewData["Title"] = "GetCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-lg btn-info" href="/Customer/Add">Create New Customer</a>
<h1>Customer List</h1>
<table class="table-sm">
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Gender</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Detail</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
        @foreach(var item in Model)
        {
<tr>
    <td>@item.Name</td>
    <td>@item.Surname</td>
    <td>@item.Gender</td>
    <td>@item.Phone</td>
    <td>@item.Adress</td>
    <td>@Html.ActionLink("Detail", "Detail", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })</td>
    <td>@Html.ActionLink("Update", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })</td>
    <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm"@*, @id = "deleteCustomer", @onclick = "deleteCustomerFunction()"*@})</td>
</tr>
        }
</table>
